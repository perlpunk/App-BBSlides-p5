#!/usr/bin/env perl
use strict;
use warnings;
use 5.010;

use App::BBSlides;
use YAML::XS qw/ LoadFile /;
use Data::Dumper;
use Getopt::Long;

unless (@ARGV) {
    die "Usage: $0 slides.yaml --out output-directory";
}
my ($source) = @ARGV;
GetOptions(
    "out=s" => \my $out,
    "data=s" => \my $datadir,
);
unless ($out) {
    die "Usage: $0 slides.yaml --out output-directory [--data data-dir]";
}
my @slides = LoadFile($source);

my $bbs = App::BBSlides->new({
    slides => [@slides],
    output => $out,
    datadir => $datadir,
    source => $source,
});

$bbs->write;

